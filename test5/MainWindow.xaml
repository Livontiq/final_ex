<Window x:Class="test5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainWindow1">
        <DataGrid x:Name="DGV" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,250,10" IsReadOnly="True" SelectionMode="Single"/>
        <Button x:Name="BtnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="578,10,0,0" VerticalAlignment="Top" Height="35" Width="77" Click="BtnAdd_Click"/>
        <Button x:Name="BtnEdit" Content="Изменить" HorizontalAlignment="Left" Margin="578,64,0,0" VerticalAlignment="Top" Height="36" Width="77" Click="BtnEdit_Click"/>
        <Button x:Name="BtnDel" Content="Удалить" HorizontalAlignment="Left" Margin="578,128,0,0" VerticalAlignment="Top" Height="36" Width="77" Click="BtnDel_Click"/>
    </Grid>
</Window>
